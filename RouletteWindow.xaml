<Window x:Class="CasinoSim.RouletteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasinoSim"
        mc:Ignorable="d"
        Title="RouletteWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Image Source="/Assets/Overall UI/Generic Felt Mat.jpeg" Stretch="Fill"/>
        <Image Source="/Assets/Roulette/Roulette_SingleZero.png" Margin="317,0,5,161" />
        <Image Source="/Assets/Roulette/RouletteWheel_SingleZero.png" Margin="22,10,470.6,53" />
        <Button HorizontalAlignment="Left" Margin="686,380,0,0" VerticalAlignment="Top" Width="75" Click="Back_Click">
            <Grid>
                <Image Source="/Assets/Overall UI/ButtonUp.png" Height="18" VerticalAlignment="Top" />
                <TextBlock HorizontalAlignment="Center" FontFamily="/CasinoSim;component/Assets/Fonts/#ChunkFive Ex">Back</TextBlock>
            </Grid>
        </Button>

        <Button HorizontalAlignment="Left" Margin="3,42,0,0" VerticalAlignment="Top" Width="75" Click="Rules_Click">
            <Grid>
                <Image Source="/Assets/Overall UI/ButtonUp.png" Height="18" VerticalAlignment="Top" />
                <TextBlock HorizontalAlignment="Center" FontFamily="/CasinoSim;component/Assets/Fonts/#ChunkFive Ex">Rules</TextBlock>
            </Grid>
        </Button>

        <Popup x:Name="RulesPopup" Placement="Center" Height="300" Width="350">
            <StackPanel Background="#d0d0d0">
                <Button x:Name="btnRules" Content="X" Width="20" Height="20" Background="Red" Click="Rules_Exit" HorizontalAlignment="Right"/>
                <TextBlock x:Name="RulesTxt" Background="Green" Foreground="White" Height="300">
                </TextBlock>
            </StackPanel>
            
        </Popup>

        <Button HorizontalAlignment="Left" Margin="50,380,0,0" VerticalAlignment="Top" Width="75" Click="PlayRoulette">
